                    @Html.LabelFor(model => model.IdObject, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IdObject)
                        @Html.ValidationMessageFor(model => model.IdObject)
                    </div>
                </div>*@
            <div class="form-group">
                <input type="submit" value="Сохранить" class="button" />
                <a href='@Url.Action("Index")'>
                    <i class="fa fa-times"></i> Отмена
                </a>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
