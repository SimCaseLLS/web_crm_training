@model TrainingCentersCRM.Models.TrainingCours

@{
    ViewBag.Title = "Edit";
}
<div class="container">
    <div>
        <a href='@Url.Action("Index")'>
            <i class="fa fa-angle-left"></i> Вернуться
        </a>
    </div>
    <h2>Редактирование учебного курса</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal row">
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ShortDescription, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.ShortDescription)
                    @Html.ValidationMessageFor(model => model.ShortDescription)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Hourse, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Hourse)
                    @Html.ValidationMessageFor(model => model.Hourse)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PriceForOrganizations, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PriceForOrganizations)
                    @Html.ValidationMessageFor(model => model.PriceForOrganizations)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PriceForIndividuals, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PriceForIndividuals)
                    @Html.ValidationMessageFor(model => model.PriceForIndividuals)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CostOfOneHourForOrganizations, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CostOfOneHourForOrganizations)
                    @Html.ValidationMessageFor(model => model.CostOfOneHourForOrganizations)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CostOfOneHourForIndividuals, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CostOfOneHourForIndividuals)
                    @Html.ValidationMessageFor(model => model.CostOfOneHourForIndividuals)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.LevelOfDifficulty, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LevelOfDifficulty)
                    @Html.ValidationMessageFor(model => model.LevelOfDifficulty)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RequiredPreliminaryPreparation, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RequiredPreliminaryPreparation)
                    @Html.ValidationMessageFor(model => model.RequiredPreliminaryPreparation)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MandatoryPreliminaryPreparation, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MandatoryPreliminaryPreparation)
                    @Html.ValidationMessageFor(model => model.MandatoryPreliminaryPreparation)
                </div>
            </div>
            @Html.HiddenFor(model => model.IdTraningCenter)
