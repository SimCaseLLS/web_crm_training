@model IEnumerable<TrainingCentersCRM.Models.TrainingCenter>

@{
    ViewBag.Title = "Учебныe центры";
}
<div class="container">
    <h2>Список учебных центров</h2>
    @Html.ActionLink("Добавить", "Create", null, new { @class = "button" })
    <table class="table striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Addres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HHCityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Addres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HHCityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td class="tools">
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "fa fa-pencil button", @title = "Редактировать" })
                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "fa fa-chevron-circle-down button", @title = "Подробнее" })
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "fa fa-trash-o button", @title = "Удалить" })
            </td>
        </tr>
    }

    </table>
</div>