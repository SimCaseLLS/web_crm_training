@model TrainingCentersCRM.Models.TrainingCenter

@{
    ViewBag.Title = Model.Organization;
}
<br />
<div class="row">
    <div>
        <h4>@Model.Organization</h4>
        @if (RolesHelper.IsUserHasPermissionForTc("admin"))
        {
            <a href="@Url.Action("Edit", "TrainingCenter", new { id = Model.Id })"><i class="fa fa-pencil"></i>Редактировать информацию о центре</a>
        }

        <hr />
        <div class="row">

            @if (Model.Logo != null)
            {
                <div class="small-12 large-2 columns">
                    <img data-interchange="[/empty/TrainingCenter/Image/@Model.Id, (default)]" class="main-image" />
                </div>
            }
            <div class="small-12 large-10 columns left" style="text-align: justify">
                @Html.Raw(Model.Description)
            </div>
        </div>
        <hr />
        <div class="row">

            <div class="details">
                <label>
                    @Html.DisplayNameFor(model => model.Addres)
                </label>
                @Html.DisplayFor(model => model.Addres)
            </div>


            <div class="details">
                <label>
                    @Html.DisplayNameFor(model => model.Phone)
                </label>
                @Html.DisplayFor(model => model.Phone)
            </div>


            <div class="details">
                <label>
                    @Html.DisplayNameFor(model => model.Email)
                </label>
                @Html.DisplayFor(model => model.Email)
            </div>

            <div class="details">
                <label>
                    @Html.DisplayNameFor(model => model.Organization)
                </label>
                @Html.DisplayFor(model => model.Organization)
            </div>
        </div>
    </div>
</div>