@model TrainingCentersCRM.Models.Menu

@{
    ViewBag.Title = "Edit";
}

<h2>Правка меню</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <p>
            <input type="checkbox" name="NotBindInTrainingCenter" id="NotBindInTrainingCenter" class="filled-in" checked="@Model.NotBindInTrainingCenter" />
            @Html.LabelFor(model => model.NotBindInTrainingCenter, htmlAttributes: new { @class = "control-label col-md-2", @for = "NotBindInTrainingCenter" })
            @Html.ValidationMessageFor(model => model.NotBindInTrainingCenter)
        </p>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Link, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Link)
                @Html.ValidationMessageFor(model => model.Link)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdTrainingCenter, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IdTrainingCenter)
                @Html.ValidationMessageFor(model => model.IdTrainingCenter)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Parent_Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Parent_Id)
                @Html.ValidationMessageFor(model => model.Parent_Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ord_Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ord_Id)
                @Html.ValidationMessageFor(model => model.Ord_Id)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
