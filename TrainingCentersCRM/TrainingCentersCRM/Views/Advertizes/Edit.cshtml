@model TrainingCentersCRM.Models.Advertize

@{
    ViewBag.Title = "Рекламный блок главной страницы";
}

<h2>Редактирование рекламного блока главной страницы</h2>

@using (Html.BeginForm("Edit", "Advertizes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <p>
            <input type="checkbox" name="Enabled" id="Enabled" class="filled-in" checked="@Model.Enabled" />
            @Html.LabelFor(model => model.Enabled, htmlAttributes: new { @class = "control-label col-md-2", @for = "Enabled" })
            @Html.ValidationMessageFor(model => model.Enabled)
        </p>
        <hr />
        <div class="form-group">
            <img src="/empty/Advertizes/Image/@Model.Id" height="150" />
            <hr />

            <div class="editor-label">Файл изображения</div>
            <div class="editor-field">
                <input type="file" name="uploadImage" />
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться", "Index")
</div>
